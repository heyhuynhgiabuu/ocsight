    "package": "turbo package",
    "clean": "turbo clean",
    "prepack": "turbo build"
  },
  "keywords": [
    "opencode",
    "observability",
    "analytics",
    "cli"
  ],
  "author": "heyhuynhgiabuu",
  "license": "MIT",
  "files": [
    "index.js",
    "lib/",
    "README.md"
  ],
  "devDependencies": {
    "@types/node": "^18.19.130",
    "bun-types": "latest",
    "esbuild": "^0.25.10",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
