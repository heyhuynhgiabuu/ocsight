{
  "name": "ocsight",
  "version": "1.2.1",
  "description": "OpenCode ecosystem observability platform",
  "main": "index.js",
  "bin": {
    "ocsight": "index.js"
  },
  "packageManager": "bun@1.2.19",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
