{
  "name": "ocsight",
  "version": "0.3.0",
  "description": "OpenCode observability platform with real-time analytics, MCP server, caching, streaming, and multi-format exports",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ocsight": "dist-bundle/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bundle": "node esbuild.config.cjs",
    "build:bin": "bun run build:bundle && pkg dist-bundle/index.js --targets node18-macos-x64,node18-macos-arm64,node18-linux-x64,node18-linux-arm64 --output ocsight",
    "dev": "bun run src/index.ts",
    "clean": "rm -rf dist dist-cjs dist-bundle",
    "start": "node dist/index.js",
    "mcp": "bun run src/mcp/server.ts",
    "test": "NODE_ENV=test bun test",
    "test:watch": "NODE_ENV=test bun test --watch",
    "export:markdown": "bun run src/index.ts export --format markdown",
    "export:csv": "bun run src/index.ts export --format csv",
    "export:json": "bun run src/index.ts export --format json",
    "prepublishOnly": "bun run clean && bun run build && bun run build:bundle && bun run test",
    "postpublish": "git push --follow-tags",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "csv-writer": "^1.6.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.0.0",
    "esbuild": "^0.25.9",
    "pkg": "^5.8.1",
    "semantic-release": "^24.2.8",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.0.0"
}
