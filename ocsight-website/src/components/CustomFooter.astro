---
import config from 'virtual:starlight/user-config';
import type { Props } from '../types';

const { locale } = Astro.props;
---

<footer class="sl-footer">
  <div class="sl-footer-content">
    <div class="sl-footer-start">
      <p class="sl-footer-text">
        Â© 2025 ocsight
      </p>
    </div>

    <div class="sl-footer-end">
      <div class="sl-footer-links">
        {config.social && (
          <>
            {config.social.map(({ icon, href, label }) => (
              <a href={href} class="sl-footer-link" aria-label={label}>
                {label}
              </a>
            ))}
          </>
        )}
      </div>
    </div>
  </div>
</footer>

<style>
  .sl-footer {
    @apply border-t border-border py-8 px-6 mt-16;
  }

  .sl-footer-content {
    @apply flex items-center justify-between max-w-screen-xl mx-auto;
  }

  .sl-footer-text {
    @apply text-sm text-muted-foreground font-mono;
  }

  .sl-footer-links {
    @apply flex items-center gap-6;
  }

  .sl-footer-link {
    @apply text-sm text-muted-foreground hover:text-foreground transition-colors font-mono;
    text-decoration: none;
  }
</style>